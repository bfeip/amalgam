{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"subcommand": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "Rust: cargo build - synth"
		},
		{
			"type": "cargo",
			"subcommand": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "Rust: cargo test - synth"
		},
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"test", "--no-run"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "cargo build tests"
		}
	]
}